<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<link href="~/CSS/Log_in.css" rel="stylesheet" />

<!DOCTYPE html>

<html>
<head>
    <title>Test</title>
</head>


@using (Html.BeginForm("Log_In", "Log_In", FormMethod.Post))
{
    if (@ViewBag.Message != null)
    {

          <script type = "text/javascript" >

                    $(document).ready(function(){
                        alert("@ViewBag.Message");
                    });

          </script> 
    }

<body class="login-block" style="margin:auto">



    <div style="height:70%; width:80%; padding-top:10%; padding-left:14%; ">

        <div class="container">
            <div class="row">


                <div class="col-md-4 login-sec">
                    <h2 class="text-center">Login Now</h2>
                    <form class="login-form">
                        <div class="form-group">
                            <label for="InputEmail1" class="text-uppercase" style="font-weight:bold">Username</label>

                            @Html.TextBox("txt_UserName", null, new { @class = "form-control" })

                        </div>
                        <div class="form-group">
                            <label for="InputPassword" class="text-uppercase">Password</label>

                            @Html.Password("txt_Password", null, new { @class = "form-control" })

                        </div>


                        <div class="form-check">
                            <label class="form-check-label">

                                @Html.CheckBox("chk_Remember", new { @class = "form-check-input" })

                                <small>Remember Me</small>
                            </label>
                            <button type="submit" class="btn btn-login float-right">
                                Submit
                            </button>
                        </div>

                    </form>
                    <div class="copy-text">
                        @Html.ActionLink("Forgot Password", "", new { @Style = "background:#;" })
                    </div>
                </div>




                <div class="col-md-8 banner-sec">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>

                        <div class="carousel-inner" role="listbox">

                            <div class="carousel-item active">
                                <img class="d-block img-fluid" src="~/Images/Log_In.jpg" alt="First slide">

                                <div class="carousel-caption d-none d-md-block">
                                    <div class="banner-text">
                                        <h3 style="font-weight:bold; color:wheat">  ICSI IT Asset Management System</h3>
                                    </div>
                                </div>
                            </div>

                        </div>



                    </div>

                </div>

            </div>





        </div>

    </div>



</body>
}

</html>
