<!--Modal quantity-->

<div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("jjj", "IT_Hardware_AMC", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
            {
                <div class="modal-header badge-warning">
                    <h4 style="font-weight:bold">
                        Please Fill the Details for adding Item to AMC
                    </h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <table style="width:100%;">
                        <tr>
                            <td colspan="2" style="text-align:left">
                                Utilization Details
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">

                                @Html.DisplayFor(x => x.Utilization_Details, new { @class = " form-rounded", @style = " width :100%; " })
                            </td>
                        </tr>
                        <tr>
                            <td style="width:30%; ">@Html.HiddenFor(X => X.Proposal_Id) Dte. Of F&A Remarks </td>
                            <td>

                                @Html.DisplayFor(x => x.FA_Remarks, new { @class = "", @style = " width :100%; " })
                            </td>
                        </tr>
                        <tr>

                            <td style="width:30%; ">Secretary Office Remarks </td>
                            <td>

                                @Html.TextBoxFor(x => x.Sec_Office_Remarks, new { @style = " width :100%; " })
                            </td>
                        </tr>
                        <tr>

                            <td style="width:30%; ">Dte. Of Purchase Remarks </td>
                            <td>

                                @Html.TextBoxFor(x => x.Purchase_Remarks, new { @style = " width :100%; " })
                            </td>
                        </tr>
                        <tr>

                            <td style="width:30%; ">Other Dept Remarks </td>
                            <td>

                                @Html.TextBoxFor(x => x.Other_Dept_Remarks, new { @style = " width :100%; " })
                            </td>
                        </tr>
                        <tr>
                            <td style="width:30%; ">@Html.HiddenFor(X => X.Proposal_Id) Upload File Copy </td>
                            <td>
                            </td>
                        </tr>
                    </table>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Edit</button>
                </div>
            }
        </div>
    </div>
